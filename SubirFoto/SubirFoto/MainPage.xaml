<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SubirFoto.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Label
                Text="Subir Fotos A Cumple!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            <Button 
                x:Name="SelectPhotoButton"
                Text="Seleccionar foto"
                Clicked="OnSelectPhotoClicked" 
                HorizontalOptions="Center" />

            <Image 
                x:Name="SelectedPhotoImage"
                Aspect="AspectFit" />

            <Button 
                x:Name="SubirFoto"
                Text="Subir Foto"
                Clicked="OnSelectSubirFoto" 
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
